<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.MainMenuActivity">
    <TextView
        android:id="@+id/main_menu_text_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/sreWhite"
        android:background="@color/srePrimary"
        android:gravity="center_horizontal"
        android:text="Main-Menu"/>
    <Button
        android:id="@+id/main_menu_button_project_management"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimMarginNormal"
        android:onClick="onNavigationButtonClicked"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/main_menu_text_label"
        android:text="Projects"
        tools:ignore="OnClick" />
    <Button
        android:id="@+id/main_menu_button_walkthrough"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimMarginNormal"
        android:onClick="onNavigationButtonClicked"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/main_menu_button_project_management"
        android:text="Walkthrough"
        tools:ignore="OnClick" />
    <Button
        android:id="@+id/main_menu_button_analytics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimMarginNormal"
        android:onClick="onNavigationButtonClicked"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/main_menu_button_walkthrough"
        android:text="Analytics"
        tools:ignore="OnClick" />
    <Button
        android:id="@+id/main_menu_button_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimMarginNormal"
        android:onClick="onNavigationButtonClicked"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/main_menu_button_analytics"
        android:text="Share"
        tools:ignore="OnClick" />
    <Button
        android:id="@+id/main_menu_button_cockpit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimMarginNormal"
        android:onClick="onNavigationButtonClicked"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/main_menu_button_share"
        android:text="Cockpit"
        tools:ignore="OnClick" />
</android.support.constraint.ConstraintLayout>