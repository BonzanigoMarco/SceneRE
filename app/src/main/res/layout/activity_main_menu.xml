<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.MainMenuActivity">

    <include
        android:id="@+id/main_menu_toolbar"
        layout="@layout/sre_toolbar" />

    <TextView
        android:id="@+id/main_menu_text_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/sreWhite"
        android:background="@color/srePrimary"
        android:gravity="center_horizontal"
        android:text="Main-Menu"
        android:layout_below="@id/main_menu_toolbar"/>

    <Button
        android:id="@+id/main_menu_button_project_management"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimMarginNormal"
        android:onClick="onNavigationButtonClicked"
        android:gravity="center"
        android:text="Projects"
        android:background="@drawable/blue_border_rounded_button"
        tools:ignore="OnClick"
        android:layout_below="@id/main_menu_text_label"/>
    <Button
        android:id="@+id/main_menu_button_walkthrough"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimMarginNormal"
        android:onClick="onNavigationButtonClicked"
        android:gravity="center"
        android:text="Walkthrough"
        android:background="@drawable/blue_border_rounded_button"
        tools:ignore="OnClick"
        android:layout_below="@id/main_menu_button_project_management"/>
    <Button
        android:id="@+id/main_menu_button_analytics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimMarginNormal"
        android:onClick="onNavigationButtonClicked"
        android:gravity="center"
        android:text="Analytics"
        android:background="@drawable/blue_border_rounded_button"
        tools:ignore="OnClick"
        android:layout_below="@id/main_menu_button_walkthrough" />
    <Button
        android:id="@+id/main_menu_button_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimMarginNormal"
        android:onClick="onNavigationButtonClicked"
        android:gravity="center"
        android:text="Share"
        android:background="@drawable/blue_border_rounded_button"
        tools:ignore="OnClick"
        android:layout_below="@id/main_menu_button_analytics"/>
    <Button
        android:id="@+id/main_menu_button_cockpit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimMarginNormal"
        android:onClick="onNavigationButtonClicked"
        android:gravity="center"
        android:text="Cockpit"
        android:background="@drawable/blue_border_rounded_button"
        tools:ignore="OnClick"
        android:layout_below="@id/main_menu_button_share"/>
</RelativeLayout>