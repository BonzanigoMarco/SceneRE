<resources>

    <!-- Base application theme. -->
    <style name="SceneReToolbarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:colorBackground">@color/sreWhite</item>
        <item name="colorPrimary">@color/srePrimary</item>
        <item name="colorPrimaryDark">@color/srePrimaryDark</item>
        <item name="colorAccent">@color/sreAccent</item>
    </style>

    <style name="SceneReTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/srePrimary</item>
        <item name="colorPrimaryDark">@color/srePrimaryDark</item>
        <item name="colorAccent">@color/sreAccent</item>
    </style>


    <style name="HeaderBar">
        <item name="android:background">@color/srePrimaryDark</item>
    </style>

    <style name="SpinnerStyle">
        <!--<item name="android:fontFamily">@font/font_awesome_900</item>-->
        <item name="android:textColor">@color/srePrimaryDark</item>
        <item name="android:colorBackground">@color/srePrimaryLight</item>
    </style>
</resources>
